<GuiXml>
    <Controls>
        <TopLevelControl name="BearStrengthBite" mouseEnabled="true" clampedToScreen="true" hidden="true" movable="true" resizeToFitDescendents="true">
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" />
            <Controls>
                <Label name="$(parent)Label" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_26)|thick-outline" color="FFFFFF" text="BLOCK">
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" />
                </Label>
            </Controls>
        </TopLevelControl>

        <TopLevelControl name="BearStrengthBreath" mouseEnabled="true" clampedToScreen="true" hidden="true" movable="true" resizeToFitDescendents="true">
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" />
            <Controls>
                <Label name="$(parent)Label" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_26)|thick-outline" color="FFFFFF" text="Breath: ">
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" />
                </Label>
                <Label name="$(parent)Timer" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_26)|thick-outline" color="FFFFFF" text="0">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="TOPRIGHT" />
                </Label>
            </Controls>
        </TopLevelControl>
        
        <TopLevelControl name="BearStrengthBeam" mouseEnabled="true" clampedToScreen="true" hidden="true" movable="true" resizeToFitDescendents="true">
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" />
            <Controls>
                <Label name="$(parent)Label" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_26)|thick-outline" color="FFFFFF" text="Beam: ">
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" />
                </Label>
                <Label name="$(parent)Timer" font="$(GAMEPAD_MEDIUM_FONT)|29|thick-outline" color="FFFFFF" text="0">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="TOPRIGHT" />
                </Label>
            </Controls>
        </TopLevelControl>

        <TopLevelControl name="BearStrengthTomb" mouseEnabled="true" clampedToScreen="true" hidden="true" movable="true" resizeToFitDescendents="true">
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" />
            <Controls>
                <Label name="$(parent)Label" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_26)|thick-outline" color="FFFFFF" text="">
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" />
                </Label>
                <Label name="$(parent)Timer" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_26)|thick-outline" color="FFFFFF" text="">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="TOPRIGHT" />
                </Label>
                <Control name="$(parent)PersonA">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="BOTTOMLEFT" offsetY="10" />
                    <Controls>
                        <Label name="$(parent)Label" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_26)|thick-outline" color="FFFFFF" text="Tomb A: ">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
                        </Label>
                        <Label name="$(parent)Timer" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_26)|thick-outline" color="FFFFFF" text="">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="TOPRIGHT" />
                        </Label>
                    </Controls>
                </Control>
                <Control name="$(parent)PersonB">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)PersonA" relativePoint="BOTTOMLEFT" offsetY="10" />
                    <Controls>
                        <Label name="$(parent)Label" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_26)|thick-outline" color="FFFFFF" text="Tomb B: ">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
                        </Label>
                        <Label name="$(parent)Timer" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_26)|thick-outline" color="FFFFFF" text"">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="TOPRIGHT" />
                        </Label>"
                    </Controls>
                </Control>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>